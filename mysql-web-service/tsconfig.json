{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": { 
      "@/*": [ "./*"],
    },
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "utils/**/*.ts",
    "node_modules/element-ui/packages/**/*.js"
  ]
}
